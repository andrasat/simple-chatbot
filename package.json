{
  "name": "simple-chatbot",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "app/backend",
    "app/frontend"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev",
    "dev:backend": "lerna run --scope=\"backend\" dev",
    "start": "lerna run start:prod",
    "lint": "lerna run lint",
    "lint:backend": "lerna run --scope=\"backend\" lint",
    "lint:frontend": "lerna run lint:frontend",
    "test": "lerna run --scope=\"backend\" test",
    "prepare": "husky || true",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@nx/next": "18.3.3",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "nx": "18.3.3"
  }
}
